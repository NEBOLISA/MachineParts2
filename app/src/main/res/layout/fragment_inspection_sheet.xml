<?xml version="1.0" encoding="utf-8"?>

    <!-- TODO: Update blank fragment layout -->
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/mylayout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText2"
                    app:layout_constraintVertical_bias="0.52">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                                <TableLayout
                                    android:id="@+id/mylayout2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/inspectionsheet_shape"
                                    android:orientation="vertical">


                                        <TextView
                                            android:id="@+id/textView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="Name: "
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="PartNumber:"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="PlanID:"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="Description:"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="GaugeType:"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="Minimum:"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView8"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="Maximum:"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView9"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:text="Nominal:"
                                            android:textStyle="bold" />

                                </TableLayout>

                                <TableLayout
                                    android:id="@+id/mylayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/inspectionsheet_shape"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp" />

                                        <TextView
                                            android:id="@+id/partNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp" />

                                        <TextView
                                            android:id="@+id/planID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp" />

                                        <TextView
                                            android:id="@+id/description"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"
                                            android:scrollbars="horizontal" />

                                        <TextView
                                            android:id="@+id/gaugeType"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp" />

                                        <TextView
                                            android:id="@+id/minimum"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp" />

                                        <TextView
                                            android:id="@+id/maximum"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp" />

                                        <TextView
                                            android:id="@+id/nominal"
                                            android:layout_width="0dp"
                                            android:layout_below="@id/maximum"
                                            android:layout_margin="10dp"
                                            android:background="@drawable/inspectionsheet_shape"
                                            android:paddingLeft="5dp"


                                            />
                                </TableLayout>


                        </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="16dp"
                    android:text="Select Measurement Value:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inspectionsheet_shape"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/prompt" />
                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inspectionsheet_shape"
                    android:hint="Enter Measurement"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="0dp"
                    android:src="@drawable/down"
                    app:layout_constraintBottom_toBottomOf="@id/spinner"
                    app:layout_constraintEnd_toEndOf="@id/spinner"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@id/spinner"
                    app:layout_constraintTop_toTopOf="@id/spinner"
                    app:layout_constraintVertical_bias="0.90999997" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</HorizontalScrollView>